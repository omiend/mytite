# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(p: Int ?= 1)
GET     /twitterLogin               controllers.Application.twitterLogin
GET     /twitterOAuthCallback       controllers.Application.twitterOAuthCallback
GET     /twitterLogout              controllers.Application.twitterLogout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
